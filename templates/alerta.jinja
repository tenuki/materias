{#          throw new Error(`Response status: ${response.status}`);#}
{#        }#}
{#        const json = await response.json();#}
{#        console.log(json);#}
      } catch (error) {
        console.error(error.message);
        return false;
      }
    }

    function pageReload() {
        if (tryGetURL(window.location.href)) {
            return window.location.reload();
        }
        setTimeout(pageReload, 60*1000);
    }

