<!DOCTYPE html>
<html class="theme-dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FCEN - {% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="/static/bulma-1.0.2.css">
    {% block head %}{% endblock %}

    <script>
        {% block scripts %}{% endblock %}
    </script>
  </head>
  <body class="is-size-3-desktop has-text-weight-medium">


<!-- Main container -->
<nav class="level" style="margin-bottom: 0px">
  <!-- Left side -->
  <p class="level-left">
      <div class="box" style="max-height:3em; margin: 0; padding: 10px">
        <img
          src="/static/fcen_logo.jpg"
          alt=""
          style="max-height:2.5em; margin: 0; padding: 0; filter: invert(1);"
{#          style="max-height:2.5em; margin: 0.5em"#}
        />
      </div>
    </p>

   <p class="level-item has-text-centered">
       <span>{% if len(pabellon)==1 %}
           Pabell√≥n {{pabellon}}
       {% else %}
           Pabellones {{ ', '.join(pabellon[:-1]) + ' y ' + pabellon[-1]}}
       {% endif %}
       <br/> <span id="hora"></span></span>
  </p>


  <!-- Right side -->
  <div class="level-right">
    <div id="openweathermap-widget-23"></div>
  </div>
</nav>

<script>
window.myWidgetParam ? window.myWidgetParam : window.myWidgetParam = [];  window.myWidgetParam.push({id: 23, cityid:
'3435910',appid: 'myappid',units: 'metric',containerid: 'openweathermap-widget-23'});(function() {const script =
document.createElement('script');script.async = true;script.charset = "utf-8";script.src = "/widget.js";const s =
document.getElementsByTagName('script')[0];s.parentNode.insertBefore(script, s);})();
</script>

  {% block content %}{% endblock %}

  </body>
</html>